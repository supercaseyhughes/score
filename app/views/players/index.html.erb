<section id="container">
<h1>Hey look, this is index</h1>
	<p id="new-player"><%= link_to "New Player", new_player_url %></p>

	<% @players.each do |player| %>
	<div class="player">
		<p> Name: <%= player.name.titleize %>, Score: <%= player.score %></p>

	<%= form_for player do |f| %>
		<%= f.label :score %>:
	  	<%= f.text_field :score, :class => 'score', :value => '0'%> 
	  	<%= f.hidden_field :id %>
	  	<%= f.submit %>
	<% end %>

	<%= link_to 'Destroy', player,
	                    method: :delete, data: { confirm: 'Are you sure?' } %>
		</div>
	<% end %>	
</section>